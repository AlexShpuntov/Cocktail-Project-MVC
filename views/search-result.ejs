<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cocktails</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <header>
    <h1><span id="main-title"><%= title %></span></h1>
    <form class="search-form">
      <input type="text" id="search-input" placeholder="Search...">
      <button type="submit">Search</button>
    </form>
    <div class="user-actions">
      <button>Sign Up</button>
      <button>Login</button>
    </div>
</header>
<main>
  <h3>Browse drinks</h3>
  <div class="drinks">
    <% for (let i = 0; i < drinks.length; i++) { %>
        <div class="drink" data-idDrink="<%= drinks[i].idDrink %>">
            <img src="<%= drinks[i].imageUrl %>" alt="<%= drinks[i].name %>">
            <h2><%= drinks[i].name %></h2>
        </div>
        <% if ((i + 1) % 3 === 0) { %>
            </div><div class="drinks">
        <% } %>
    <% } %>
</div>
</main>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const drinkDivs = document.querySelectorAll('.drink');
    drinkDivs.forEach(function (drinkDiv) {
      drinkDiv.addEventListener('click', function () {
        const drinkId = this.getAttribute('data-idDrink');
        window.location.href = `/info-for-drink?id=${drinkId}`;
        console.log(drinkId.value);
      });
    });
  });
</script>
<script>
  document.querySelector('.search-form').addEventListener('submit', function(event) {
    event.preventDefault();
    const searchInput = document.getElementById('search-input').value;
    window.location.href = `/search?name=${searchInput}`;
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mainTitleSpan = document.getElementById('main-title');
    mainTitleSpan.addEventListener('click', function (event) {
      if (event.target === this) {
        window.location.href = '/';
      }
    });
  });
</script>
</html>
